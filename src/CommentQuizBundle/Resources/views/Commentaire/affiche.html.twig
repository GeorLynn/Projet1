                <div>
                        <textarea name="contenu"  id="content" rows="10" cols="140" placeholder="Ajouter une comentaire"></textarea>

                </div>

                <br>
                <button type="submit" class="btn btn-primary pull-left"  style="border: 1px solid #43a047 ; background-color:#66bb6a; ">Ajouter</button>
                {% endif %}


            </form>

