{% extends 'base.html.twig' %}
{% block name %}
    <div class="container">


            <p align="right"><a href="logout" class="btn btn-secondary">Déconnexion</a></p>



    </div>

{% endblock name %}
{% block body %}
    <div class="container">
        <h1>Liste des Articles</h1>
        <a href="{{ path('ra') }}"><h5 class="card-title">Rechercher un article</h5></a>
        <br>
        <center>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Auteur</th>
                        <th scope="col">Titre d'article</th>
                        <th scope="col">Contenu</th>
                        <th scope="col">Date</th>
                    </tr>
                    </thead>
                    {% for a in articles %}
                    <tr>
                        <td>{{ a.user.username }}</td>
                        <td><a href="{{ path('art', {'id':a.id}) }}">{{ a.titre }}</a></td></td>
                        <td>{{ a.contenu }}</td>
                        <td>{{ a.dateajout|date('d/m/Y') }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>


                </tbody>

            </table>
            <br>
            <div class="card-group">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('images/article.jpg') }}" alt="Card image cap">
                    <div class="card-body">
                        <a href="{{ path('aa') }}"><h5 class="card-title">Ajouter un article</h5></a>
                        <p class="card-text">Vous permet d'ajouter un article à notre Forum</p>

                    </div>
                </div>
                <div class="card">
                    <img class="card-img-top" src="{{ asset('images/com.jpg') }}" alt="Card image cap">
                    <div class="card-body">
                        <a href="{{ path('ac') }}"><h5 class="card-title">Commentaire</h5></a>
                        <p class="card-text">Ajouter un commentaire à l'un de nos articles</p>

                    </div>
                </div>

            </div>

            </center>
    </div>

{% endblock %}
